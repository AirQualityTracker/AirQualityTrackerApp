<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_gravity="center"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#81C784"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="16dp"
    card_view:contentPadding="4dp"
    android:foreground="?selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/face_image"
            android:layout_width="131dp"
            android:layout_height="100dp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="0dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toStartOf="@id/quality_indicator"
            card_view:layout_constraintBottom_toTopOf="@+id/degrees_celsius"
            />




        <TextView
            android:id="@+id/quality_indicator"
            android:layout_width="131dp"
            android:layout_height="100dp"
            android:text="quality indicator"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="0dp"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/face_image"
            card_view:layout_constraintEnd_toStartOf="@id/quality_assessment"
            card_view:layout_constraintBottom_toTopOf="@+id/air_km_h"/>

        <TextView
            android:id="@+id/quality_assessment"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:autoSizeMaxTextSize="24sp"
            android:autoSizeMinTextSize="12sp"

            android:autoSizeTextType="uniform"
            android:breakStrategy="balanced"

            android:text="quality assessment"
            card_view:layout_constraintBottom_toTopOf="@id/atmosphere_humidity"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/quality_indicator"
            card_view:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/degrees_celsius_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            card_view:layout_constraintTop_toBottomOf="@id/face_image"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toStartOf="@id/degrees_celsius"
            card_view:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/degrees_celsius"
            android:layout_width="91dp"
            android:layout_height="40dp"
            android:text="celcious"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="102dp"
            card_view:layout_constraintTop_toBottomOf="@id/face_image"
            card_view:layout_constraintStart_toEndOf="@id/degrees_celsius_image"
            card_view:layout_constraintEnd_toStartOf="@id/air_km_h_image"
            card_view:layout_constraintBottom_toBottomOf="parent"/>



        <!--Air km/h data -->
        <ImageView
            android:id="@+id/air_km_h_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            card_view:layout_constraintTop_toBottomOf="@id/quality_indicator"
            card_view:layout_constraintStart_toEndOf="@id/degrees_celsius"
            card_view:layout_constraintEnd_toStartOf="@id/air_km_h"
            card_view:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/air_km_h"
            android:layout_width="91dp"
            android:layout_height="40dp"

            android:text="air km/h"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@id/atmosphere_humidity_image"
            card_view:layout_constraintStart_toEndOf="@id/air_km_h_image"
            card_view:layout_constraintTop_toBottomOf="@id/quality_indicator" />

        <!--Atmoshpere humidity data -->
        <ImageView
            android:id="@+id/atmosphere_humidity_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            card_view:layout_constraintTop_toBottomOf="@id/quality_assessment"
            card_view:layout_constraintStart_toEndOf="@id/air_km_h"
            card_view:layout_constraintEnd_toStartOf="@id/atmosphere_humidity"
            card_view:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/atmosphere_humidity"
            android:layout_width="91dp"
            android:layout_height="40dp"
            android:text="humidity"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="100dp"
            card_view:layout_constraintTop_toBottomOf="@id/quality_assessment"
            card_view:layout_constraintStart_toEndOf="@id/atmosphere_humidity_image"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.cardview.widget.CardView>